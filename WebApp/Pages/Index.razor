@page "/"

@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@inject SignInManager<IdentityUser> SignInManager

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-4 fw-normal">Supermarket Management System</h1>
      <p class="lead fw-normal">Sample ASP.NET Core Balzor project with Entity Framework and SQL Server. Secured with ASP.NET Core Identity for Authentication and Authorization.</p>
      <p>Use one of demo users to <a href="/Identity/Account/Login">log in</a> or <a href="/Identity/Account/Register">register new user</a></p>
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>